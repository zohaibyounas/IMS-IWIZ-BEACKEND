{
  "name": "iwiz-inventory-management",
  "version": "1.0.0",
  "description": "Inventory Management System for IWIZ Solutions",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "server": "nodemon server.js",
    "setup:local": "cp env.config .env && echo 'NODE_ENV=development' >> .env",
    "setup:production": "cp env.config .env && echo 'NODE_ENV=production' >> .env",
    "validate": "node -e \"require('dotenv').config(); console.log('Environment variables loaded successfully')\"",
    "test:connection": "node -e \"require('dotenv').config(); const mongoose = require('mongoose'); mongoose.connect(process.env.MONGODB_URI).then(() => { console.log('Database connection successful'); process.exit(0); }).catch(err => { console.error('Database connection failed:', err.message); process.exit(1); })\""
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "inventory",
    "management",
    "express",
    "mongodb",
    "react"
  ],
  "author": "IWIZ Solutions",
  "license": "MIT"
}
